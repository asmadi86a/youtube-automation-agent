# YouTube Automation Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here

# Upload Configuration
VIDEOS_FOLDER=./videos
SHORTS_FOLDER=./shorts
LOGS_FOLDER=./logs

# Scheduling Configuration
WEEKLY_VIDEOS_COUNT=2
DAILY_SHORTS_COUNT=10
VIDEO_UPLOAD_DAY_1=monday
VIDEO_UPLOAD_TIME_1=15:00
VIDEO_UPLOAD_DAY_2=thursday
VIDEO_UPLOAD_TIME_2=15:00

# Trending Content Configuration
TRENDING_CHECK_INTERVAL=3600
TOP_TRENDS_COUNT=10
MIN_VIEW_THRESHOLD=100000

# Queue Management
QUEUE_DB_PATH=./queue.db
MAX_QUEUE_SIZE=50

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/agent.log

# Optional: Proxy Configuration (if needed)
HTTP_PROXY=
HTTPS_PROXY=

# Optional: Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=60
